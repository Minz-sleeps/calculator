<Window x:Class="Wpf_first_oop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="НИИ «Циклон»" Height="500" Width="400">
    <Grid Background="Silver">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="Text1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                 Margin="15" FontSize="24" VerticalContentAlignment="Center" Text="0" IsReadOnly="True"/>

        <Button Grid.Row="1" Grid.Column="0" Content="cos" Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="1" Grid.Column="1" Content="sin" Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="1" Grid.Column="2" Content="e"    Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="1" Grid.Column="3" Content="π"    Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="2" Grid.Column="0" Content="n!"    Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="2" Grid.Column="1" Content="ln"    Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="2" Grid.Column="2" Content="10^x" Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>
        <Button Grid.Row="2" Grid.Column="3" Content="exp"   Click="OnClick" Margin="2" FontSize="20" Background="MediumSeaGreen"/>

        <Button Grid.Row="3" Grid.Column="0" Content="7" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="3" Grid.Column="1" Content="8" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="3" Grid.Column="2" Content="9" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="3" Grid.Column="3" Content="/" Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>

        <Button Grid.Row="4" Grid.Column="0" Content="4" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="4" Grid.Column="1" Content="5" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="4" Grid.Column="2" Content="6" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="4" Grid.Column="3" Content="*" Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>

        <Button Grid.Row="5" Grid.Column="0" Content="1" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="5" Grid.Column="1" Content="2" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="5" Grid.Column="2" Content="3" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="5" Grid.Column="3" Content="-" Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>

        <Button Grid.Row="6" Grid.Column="0" Content="C" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="6" Grid.Column="1" Content="0" Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="6" Grid.Column="2" Content="." Click="OnClick" Margin="2" FontSize="24" Background="LightSlateGray"/>
        <Button Grid.Row="6" Grid.Column="3" Content="+" Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>

        <Button Grid.Row="7" Grid.Column="0" Content="("    Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>
        <Button Grid.Row="7" Grid.Column="1" Content=")"    Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>
        <Button Grid.Row="7" Grid.Column="2" Content="back" Click="OnClick" Margin="2" FontSize="20" Background="DeepSkyBlue"/>
        <Button Grid.Row="7" Grid.Column="3" Content="="    Click="OnClick" Margin="2" FontSize="24" Background="DeepSkyBlue"/>
    </Grid>
</Window>